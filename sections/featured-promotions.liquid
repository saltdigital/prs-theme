        "settings": {
          "image": "",
          "link": "",
          "title": "Promotion",
          "text": "<p>This is a featured promotion block, add some text here to talk about your promotion.</p>"
        }
      },
      {
        "type": "image",
        "settings": {
          "image": "",
          "link": "",
          "title": "Promotion",
          "text": "<p>This is a featured promotion block, add some text here to talk about your promotion.</p>"
        }
      },
      {
        "type": "image",
        "settings": {
          "image": "",
          "link": "",
          "title": "Promotion",
          "text": "<p>This is a featured promotion block, add some text here to talk about your promotion.</p>"
        }
      }
    ]
  }]
}
{% endschema %}
