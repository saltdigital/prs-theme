    &:nth-of-type(2), &:nth-of-type(4) {
      .flex-box__item-half {
        &:first-of-type {
          order: 2;
          @media only screen and (min-width: 767px) {
            order: 1;
          }
        }
        &:last-of-type {
          order: 1;
          @media only screen and (min-width: 767px) {
            order: 2;
          }
        }
      }
    }
  }
  .flex-box__item-half {
    background: white;
  }
}

/*===========
  Stainless Page
   =========== */

   .stainless-container {
     .flex-box {
       flex-direction: row;
     }
     .image__wrapper {
       position: relative;
       cursor: pointer;
       width: 100%;
       height: 100%;
       img {
         width: 100%;
         height: 100%;
       }
     }
     .gradient {
       position: absolute;
       top: 0;
       left: 0;
       width: 100%;
       height: 100%;
       background: transparent;
       transition: 800ms ease;
     }
     .anchor-wrapper {
       width: 100%;
       height: 100%;
     }
     .flex-box__one-third {
       &:hover {
         .gradient {
           background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3));
         }
         .hover-content {
           opacity: 1;
           top: calc(50% + 40px);
         }
       }
     }
     .hover-content {
        text-align: center;
        opacity: 0;
        position: absolute;
        color: white;
        max-width: 260px;
        width: 100%;
        top: 200px;
        transition: 500ms ease;
        .feature_divider {
          border-color: white;
        }
     }
   }

   .stainless-category-container {
     margin-bottom: 60px;
     h2.title {
       font-size: 40px;
     }
     .gallery-bar {
       display: flex;
      flex-wrap: wrap;
      justify-content: center;
     }
     .four-per-row {
       flex: 0 1 47%;
      padding: 5px;
      @media only screen and (min-width: 768px) {
        flex: 0 1 23%;
      }
     }
   }
