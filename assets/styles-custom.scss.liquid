/* ============
    Global Classes
    ============ */

/* Flex Box Container */

.flex-box {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  @media only screen and (min-width: 767px) {
    flex-direction: row;
  }
  &:nth-of-type(2), &:nth-of-type(4) {
    .flex-box__item-half {
      &:first-of-type {
        order: 2;
        @media only screen and (min-width: 767px) {
          order: 1;
        }
      }
      &:last-of-type {
        order: 1;
        @media only screen and (min-width: 767px) {
          order: 2;
        }
      }
    }
  }
  .flex-box__item-half {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 0 1 100%;
    text-align: center;
    @media only screen and (min-width: 767px) {
      flex: 0 1 50%;
    }
    ul {
      margin: 0;
      @media only screen and (min-width: 767px) {
        list-style: none;
      }
    }
    img {
      max-width: 100%;
      height: auto;
    }
  }
  .flex-box__content {
    max-width: 525px;
    width: 100%;
    margin: 0 auto;
    padding: 25px;
  }
  .flex-box__one-third {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    flex: 0 1 100%;
    text-align: center;
    position: relative;
    @media only screen and (min-width: 480px) {
      flex: 0 1 50%;
    }
    @media only screen and (min-width:  767px) {
      flex: 0 1 33.33%;
    }
    img, svg {
        position: relative;
    }
    h2 {
      position: absolute;
      color: black;
      background-color: white;
      max-width: 210px;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 16px;
      padding: 10px;
      left: 50%;
      top: 50%;
      transform: translate(-50%,-50%);
      text-align: center;
    }
  }
  .flex-box__four {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    flex: 0 1 50%;
    text-align: left;
    position: relative;
    @media only screen and (min-width: 767px) {
      flex: 0 1 25%;
      text-align: center;
    }
  }
}
.nav ul.menu {
  @media only screen and (min-width: 1200px) {
    padding-top: 5px !important;
  }
}

.parallax-banner {
  .subtitle {
    max-width: 450px;
    width: 100%;
    margin: 0 auto;
  }
}

/*  ===========
    Landing Page
    =========== */

.featured-content-section {
  h2.title {
    @media only screen and (max-width: 767px) {
      font-size: 16px;
    }
  }
}

.index {
  .featured-promotions-section {
    margin-top: 100px;
    .one-third {
      img {
        width: 100%;
        height: auto;
      }
    }
  }
}

.logo-bar-section {
  .logo-bar {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    .logo-bar__item {
      flex: 0 1 45%;
      @media only screen and (min-width: 767px){
        flex: 0 1 18%;
      }
    }
  }
}
.image-with-text-section{
  &:nth-of-type(even) {
      background: white;
      .flex-box__item-half {
        &:first-of-type {
          order: 2;
          @media only screen and (min-width: 767px) {
            order: 1;
          }
        }
        &:last-of-type {
          order: 1;
          @media only screen and (min-width: 767px) {
            order: 2;
          }
        }
      }
    }
    .flex-box__item-half {
      background: #ededed;
    }
}

