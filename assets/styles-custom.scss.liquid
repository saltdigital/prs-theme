/*===========
  Stainless Page
   =========== */

   .stainless-container {
     .flex-box {
       flex-direction: row;
     }
     .image__wrapper {
       position: relative;
       cursor: pointer;
       width: 100%;
       height: 100%;
       img {
         width: 100%;
         height: 100%;
       }
     }
     .gradient {
       position: absolute;
       top: 0;
       left: 0;
       width: 100%;
       height: 100%;
       background: transparent;
       transition: 800ms ease;
     }
     .anchor-wrapper {
       width: 100%;
       height: 100%;
     }
     .flex-box__one-third {
       overflow: hidden;
       &:hover {
         .gradient {
           background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3));
         }
         .hover-content {
           opacity: 1;
           top: calc(50% + 39px);
         }
       }
     }
     .hover-content {
       pointer-events: none;
        text-align: center;
        opacity: 0;
        position: absolute;
        color: white;
        max-width: 260px;
        width: 100%;
        top: 200px;
        transition: 500ms ease;
        .feature_divider {
          border-color: white;
        }
     }
   }

   .stainless-category-container {
     padding-top: 75px;
